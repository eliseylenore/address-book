@{
  Layout="Shared/_Layout.cshtml";
}

@if (@Model.Count > 0) {
  <form action="/contacts/search" method="post" id="search-form">
    <label for="search-string">Search for a contact</label>
    <input name="search-string" type="text">
    <button type="submit" name="button" class="btn btn-info">Search</button>
  </form>
}

<h1>Contact List</h1>
@if (@Model.Count == 0)
{
  <h3>No contacts have been added yet!</h3>
}
@foreach (var contact in Model)
{
  <h3><a href='/contacts/@contact.GetId()'>@contact.GetName()</h3>
}
@if (@Model.Count > 0) {
  <form action="/contacts/clear" method="post">
  <button type="submit" name="button" class="btn btn-info">Clear Contacts</button>
  </form>
}
